  "permissions": [
    "contextMenus","tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["javascripts/libraries/jquery-1.8.3.min.js"],
      "css" : ["css/injection.css"]
    }
  ],
  "web_accessible_resources" : [
    "images/*.png"
  ],
